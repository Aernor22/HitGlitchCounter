<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="club.hellfire.hitglitchcounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sr_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sr_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SpellChooser" />
        <activity android:name=".AddSpell" android:theme="@style/AppTheme.CustomTheme"/>
        <activity android:name=".ViewSpell" android:theme="@style/AppTheme.CustomTheme"/>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>